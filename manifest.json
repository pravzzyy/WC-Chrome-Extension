{
    "name": "Words",
    "description": "A simple JavaScript wordcounter for text placed within",
    "version": "1.0",
    "manifest_version": 2,
    
    "browser_action": {
        "default_icon": {
            "32": "icon.png"
        },
        "default_popup": "index.html"
    },
    
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "js": ["wordcount.js"],
        "run_at": "document_end"
    }]
}
